
<style>
    #map {
        height: 400px;
        width: 100%; 
    }
</style>

<h3>My Google Maps Demo</h3>
<div id="map"></div>
<%= @location  %>
<script>
    function initMap() {

        var map = new google.maps.Map(document.getElementById('map'), {zoom: 7, center: {lat: -36.3133, lng: 145.0504}});

        <% @listings.each do |listing| %>
            var location = {lat: <%= listing.latitude / 10.0**7 %>, lng: <%= listing.longitude/ 10.0**7 %>};
            var marker = new google.maps.Marker({position: location, map: map});
        <% end %>
    }
</script>

<script async defer
    src=<%= "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.googleapi}&callback=initMap" %>>
</script>